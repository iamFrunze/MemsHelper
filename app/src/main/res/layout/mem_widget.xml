<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">


    <TextView
        android:id="@+id/appwidget_text_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/eng"
        android:text="@string/eng"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/appwidget_text_ru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/ru"
        android:text="@string/ru"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/appwidget_text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/author"
        android:text="@string/author"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_ya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"

        android:text="@string/ya_lic"
        android:textSize="16sp" />
</LinearLayout>